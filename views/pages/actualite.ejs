<!doctype html>
<html lang="fr">
<%- include("header"); -%>
<body class="">
<%- include("barre"); -%>

<main>
    <section>
        <div class="container-fluid">
            <div class="container">
                <div class="row-align-self-center">
                    <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="police my-4">
                            <h1 class="paraH1">Espace actualités</h1>
                            <h6 class="para">Accedez aux toutes dernières nouvelles du MHSC</h6>
                        </div>
                    </article>
                    <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <%for( i in actualite){ %>
                            <% moment.locale("fr")%>
                            <% let datee=moment(actualite[i].dateactualite)%>

                        <div class="card border-light mb-4">
                            <div class="card-body bg-light">
                                <h2 class="card-title"><%= actualite[i].titreactualite%></h2>
                                <a href="/actualites/<%= actualite[i].titreurlactualite%>" class="btn btn-outline-primary" >Lire l'actu &rarr;</a>
                            </div>
                            <div class="card-footer text-muted">
                                <%= datee.format("D MMMM YYYY")%>,  Categorie: <%for(j in tab[i]){for(k in tab[i][j]){let rep = tab[i][j][k];let rep1=rep.libellecategorie%><%= rep1%> <%}}%>
                            </div>
                        </div>
                        <%}%>
                    </article>
                </div>
            </div>
        </div>
    </section>
</main>

</body>
<%- include("footer");-%>
</html>