<!doctype html>
<html lang="fr">
<%- include("header"); -%>
<body class="bodyColor">
<%- include("barre"); -%>

<main>
    <section>
        <div class="container-fluid">
            <div class="container">
                <div class="row-align-self-center">
                    <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="police">
                            <h1 class="center1">Classement 2019/2020</h1>
                        </div>
                    </article>
                    <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="table-responsive">
                        <table class="table table-striped table-dark mb-4">
                            <thead>
                            <tr>
                                <th scope="col">Pos.</th>
                                <th scope="col">Clubs</th>
                                <th scope="col">Pts</th>
                                <th scope="col">J</th>
                                <th scope="col">Diff</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%var json = JSON.parse(body)%>
                            <% for( i in json.api.standings[0]){ %>
                                <% var a=parseInt(i)+1 %>
                                <%var couleur%>
                                <% if(a===1){couleur="premier"} else if(a===2){couleur="deuxieme"} else if(a===3){couleur="troisieme"} else if(a===4){couleur="quatrieme"} else if (a===5){couleur =""} else if(a===18){couleur="dixhuit"} else if(a===19){couleur="dixneuf"} else if(a===20){couleur="vingt"} %>
                                <tr>
                                    <th scope="row" id=<%= couleur %>><%= a%></th>
                                    <td><%= json.api.standings[0][i].teamName%></td>
                                    <td><%= json.api.standings[0][i].points%></td>
                                    <td><%= json.api.standings[0][i].all.matchsPlayed%></td>
                                    <td><%= json.api.standings[0][i].goalsDiff%></td>
                                </tr>
                            <% } %>

                            </tbody>
                        </table>
                        </div>
                    </article>
                    <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="police table-responsive">
                            <table class="table table-striped table-dark mb-4">
                                <thead>
                                <tr>
                                    <th scope="col">Couleur</th>
                                    <th scope="col">Légende</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <th scope="row" id="premier"></th>
                                    <td>Qualification directe pour les phases de groupes de l'UEFA Champions League</td>
                                </tr>
                                <tr>
                                    <th scope="row" id="troisieme"></th>
                                    <td>Qualifcation pour le troisième tour preliminaire de l'UEFA Champions League</td>
                                <tr>
                                    <th scope="row" id="quatrieme"></th>
                                    <td>Qualification directe pour les phases de groupe de l'UEFA Europa League</td>
                                </tr>
                                <tr>
                                    <th scope="row" id="dixhuit"></th>
                                    <td>Barrage avec le vainqueur des play-off de la deuxième division</td>
                                </tr>
                                <tr>
                                    <th scope="row" id="dixneuf"></th>
                                    <td>Relegation directe en deuxième division</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>
</main>
</body>
<%- include("footer");-%>
</html>