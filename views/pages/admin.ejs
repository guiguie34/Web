<!doctype html>
<html lang="fr">
<%- include("header"); -%>
<body>
<%- include("barre"); -%>

<main>
    <section>
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <a role="button" class="btn btn-outline-info" href="/profil/adminActu/create" >Creer une actualit√©</a>
                        <p></p>
                    </article>
                    <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <table class="table">
                            <thead>
                            <tr>
                                <th scope="col">Numero</th>
                                <th scope="col">Titre</th>
                                <th scope="col">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for(i in actua){%>
                            <tr>
                                <th scope="row"><%= actua[i].idactualite%></th>
                                <td><%= actua[i].titreactualite%></td>
                                <td>
                                    <a class="btn btn-outline-info" href="/profil/adminActu/edit/<%=actua[i].idactualite %>" role="button">Editer</a>
                                    <form method="POST" action="/profil/adminActu/delete/<%=actua[i].idactualite %>?_method=DELETE">
                                        <button name="submit" type="submit" class="btn btn-outline-danger">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                            <%}%>
                            </tbody>
                        </table>
                    </article>
                </div>
            </div>
        </div>
    </section>
</main>

</body>
<%- include("footer");-%>
</html>