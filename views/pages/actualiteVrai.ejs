<!doctype html>
<html lang="fr">
<%- include("header"); -%>
<body>
<%- include("barre"); -%>

<main>
    <section>
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <h2><%= actualite.titreactualite%></h2>
                        <p><%= actualite.dateactualite %></p>
                        <p><%= actualite.contenuactualite%></p>
                    </article>
                    <% if(co !== false){%>
                    <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="commentaire">
                        <form method="post">
                            <div class="form-group row">
                                <textarea id="contenucommentaire" name="contenucommentaire" rows="8" maxlength="1000" class="form-control"></textarea>
                            </div>
                            <div class="form-group row">
                                <div class="offset-4 col-8">
                                    <button name="submit" type="submit" class="btn btn-primary">Commenter</button>
                                </div>
                            </div>
                        </form>
                        </div>
                    </article>
                    <%}%>
                    <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <p>Commentaires: </p>
                        <%for(i in com){%>
                            <p><%= com[i].contenucommentaire%></p>
                        <%}%>
                    </article>
                </div>
            </div>
        </div>
    </section>
</main>

</body>
<%- include("footer");-%>
</html>