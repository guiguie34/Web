<!doctype html>
<html lang="fr">
<%- include("header"); -%>
<body class="bodyColor">
<%- include("barre"); -%>

<main>
    <section>
        <div class="container-fluid">
            <div class="container">
                <div class="row-align-self-center">
                    <article class=" col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="table-responsive">
                            <table class="table table-striped table-dark">
                                <thead>
                                <tr>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Poste</th>
                                    <th scope="col">Buts</th>
                                    <th scope="col">Apparition</th>
                                </tr>
                                </thead>
                                <tbody>
                                <% for( i in player.api.players){ %>
                                    <tr>
                                        <th scope="row"><%= player.api.players[i].player_name%></th>
                                        <td><%= player.api.players[i].position%></td>
                                        <td><%= player.api.players[i].goals.total%></td>
                                        <td><%= player.api.players[i].games.appearences%></td>
                                    </tr>
                                <% } %>

                                </tbody>
                            </table>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>
</main>
</body>
<%- include("footer");-%>
</html>