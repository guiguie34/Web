<!doctype html>
<html lang="fr">
<%- include("header"); -%>
<body>
<%- include("barre"); -%>

<main>
    <section>
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">

                        <form method="post">
                            <div class="form-group row">
                                <label for="titreactualite" class="col-4 col-form-label">Titre</label>
                                <div class="col-8">
                                    <input id="titreactualite" name="titreactualite" type="text" required="required" class="form-control" value="<%= actua.titreactualite%>">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="contenuactualite" class="col-4 col-form-label">Contenu</label>
                                <div class="col-8">
                                    <textarea id="contenuactualite" name="contenuactualite" cols="40" rows="15" required="required" class="form-control"><%= actua.contenuactualite%></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="offset-4 col-8">
                                    <button name="submit" type="submit" class="btn btn-primary">Soumettre</button>
                                </div>
                            </div>
                        </form>
                    </article>
                </div>
            </div>
        </div>
    </section>
</main>

</body>
<%- include("footer");-%>
</html>