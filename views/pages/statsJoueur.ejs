<!doctype html>
<html lang="fr">
<%- include("header"); -%>
<body class="bodyColor">
<%- include("barre"); -%>

<main>
    <section>
        <div class="container-fluid">
            <div class="container">
                <h1 class="mb-1"> Espace statistiques</h1>
                <h3 class="mb-3">Accedez aux statistiques détaillées par joueurs !</h3>
                <%let nbJou = 0 %>
                <%var obj = {table:[]}%>
                <% for(j in player.api.players){ if(player.api.players[j].league === "Ligue 1"){nbJou++;obj.table.push(player.api.players[j]);}}%>
                <%let nbJou2 = Math.trunc(nbJou/2)%>
                <%for(let i=0;i<nbJou2;i++){%>
                <div class="row-align-self-center mb-4">
                <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card-deck">
                        <div class="card border-light">
                            <div class="card-body">
                                <h5 class="card-title"><%= obj.table[i].firstname%> <%= obj.table[i].lastname%></h5>
                                <p class="card-text">Titularisations: <%=obj.table[i].games.lineups %></p>
                                <p class="card-text">Minutes jouées: <%=obj.table[i].games.minutes_played %></p>
                                <p class="card-text">Cartons jaunes/rouges : <%=obj.table[i].cards.yellow %> / <%=obj.table[i].cards.red %></p>
                                <%let urll=obj.table[i].lastname.replace(" ","") %>
                                <a href="/statsJoueurs/<%=urll%>" class="btn btn-outline-primary" >Voir la fiche &rarr;</a>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Poste: <%= obj.table[i].position%></small>
                            </div>
                        </div>
                        <div class="card border-light">
                            <div class="card-body">
                                <h5 class="card-title"><%=obj.table[nbJou2 + i].firstname%> <%=obj.table[nbJou2 + i].lastname%></h5>
                                <p class="card-text">Titularisations: <%=obj.table[nbJou2 + i].games.lineups%></p>
                                <p class="card-text">Minutes jouées: <%=obj.table[nbJou2 + i].games.minutes_played%></p>
                                <p class="card-text">Cartons jaunes/rouges : <%=obj.table[nbJou2 + i].cards.yellow %> / <%=obj.table[nbJou2+ i].cards.red %></p>
                                <%let urll2=obj.table[nbJou2+i].lastname.replace(" ","")%>
                                <a href="/statsJoueurs/<%= urll2%>" class="btn btn-outline-primary" >Voir la fiche &rarr;</a>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Poste: <%= obj.table[nbJou2+i].position%></small>
                            </div>
                        </div>
                    </div>
                </article>
                </div>
                <%}%>
                <%if(nbJou2%2 !==0){%>
                <div class="row-align-self-center mb-4">
                    <article class=" col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="card-deck">
                        <div class="card border-light">
                            <div class="card-body">
                                <h5 class="card-title"><%=obj.table[nbJou].firstname%> <%=obj.table[nbJou].lastname%></h5>
                                <p class="card-text">Titularisations: <%= obj.table[nbJou].games.lineups%></p>
                                <p class="card-text">Minutes jouées: <%= obj.table[nbJou].games.minutes_played%></p>
                                <p class="card-text">Cartons jaunes/rouges : <%=obj.table[nbJou].cards.yellow %> / <%=obj.table[nbJou].cards.red %></p>
                                <%let urll3=obj.table[nbJou].lastname.replace(" ","") %>
                                <a href="/statsJoueurs/<%= urll3%>" class="btn btn-outline-primary" >Voir la fiche &rarr;</a>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">Poste: <%= obj.table[nbJou].position%></small>
                            </div>
                        </div>
                    </div>
                    </article>
                </div>
                <%}%>
            </div>
        </div>
    </section>
</main>
</body>
<%- include("footer");-%>
</html>