<!doctype html>
<html lang="fr">
<%- include("header"); -%>
<body class="bodyColor">
<%- include("barre"); -%>

<main>
    <section>
        <div class="container-fluid">
            <div class="container">
                <div class="row-align-self-center">
                    <article class=" col-lg-6 col-md-6 col-sm-12 col-xs-12">
                        <div class="table-responsive">
                        <table class="table table-striped table-dark">
                            <thead>
                            <tr>
                                <th scope="col">Pos.</th>
                                <th scope="col">Clubs</th>
                                <th scope="col">Pts</th>
                                <th scope="col">J</th>
                                <th scope="col">Diff</th>
                            </tr>
                            </thead>
                            <tbody>
                            <%var json = JSON.parse(body)%>
                            <% for( i in json.api.standings[0]){ %>
                                <% var a=parseInt(i)+1 %>
                                <%var couleur%>
                                <% if(a===1){couleur="premier"} else if(a===2){couleur="deuxieme"} else if(a===3){couleur="troisieme"} else if(a===4){couleur="quatrieme"} else if (a===5){couleur =""} else if(a===18){couleur="dixhuit"} else if(a===19){couleur="dixneuf"} else if(a===20){couleur="vingt"} %>
                                <tr>
                                    <th scope="row" id=<%= couleur %>><%= a%></th>
                                    <td><%= json.api.standings[0][i].teamName%></td>
                                    <td><%= json.api.standings[0][i].points%></td>
                                    <td><%= json.api.standings[0][i].all.matchsPlayed%></td>
                                    <td><%= json.api.standings[0][i].goalsDiff%></td>
                                </tr>
                            <% } %>

                            </tbody>
                        </table>
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </section>
</main>
</body>
<%- include("footer");-%>
</html>