<!doctype html>
<html lang="fr">
<%- include("header"); -%>
<body>
<%- include("barre"); -%>

<main>
    <section>
        <div class="container-fluid">
            <div class="container">
                <div class="row">
                    <div class="table-responsive">
                    <article class=" col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        
                        <table class="table">
                            <thead>
                            <tr>
                                <th scope="col">Numero</th>
                                <th scope="col">Pseudo</th>
                                <th scope="col">Mail</th>
                                <th scope="col">Rang</th>
                                <th scope="col">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            <% for(i in user){%>
                                <tr>
                                    <th scope="row"><%= user[i].idutilisateur%></th>
                                    <td><%= user[i].pseudoutilisateur%></td>
                                    <td><%= user[i].mailutilisateur%></td>
                                    <td><%= user[i].rankutilisateur%></td>
                                    <td>
                                        <a class="btn btn-outline-info" href="/profil/adminUser/edit/<%=user[i].idutilisateur %>" role="button">Editer</a>
                                        <form method="POST" action="/profil/adminUser/delete/<%=user[i].idutilisateur %>?_method=DELETE">
                                            <button name="submit" type="submit" class="btn btn-outline-danger">Bannir</button>
                                        </form>
                                    </td>
                                </tr>
                            <%}%>
                            </tbody>
                        </table>
                    </article>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

</body>
<%- include("footer");-%>
